{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Glyph",
  "scopeName": "source.glyph",
  "patterns": [
    { "include": "#comments" },
    { "include": "#type-definition" },
    { "include": "#route-definition" },
    { "include": "#cli-command-definition" },
    { "include": "#cron-task-definition" },
    { "include": "#event-handler-definition" },
    { "include": "#queue-worker-definition" },
    { "include": "#keywords" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#operators" },
    { "include": "#types" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.glyph",
          "match": "#.*$"
        },
        {
          "name": "comment.line.double-slash.glyph",
          "match": "//.*$"
        }
      ]
    },
    "type-definition": {
      "patterns": [
        {
          "name": "meta.type.glyph",
          "begin": "^\\s*(:)\\s+([A-Z][a-zA-Z0-9_]*)\\s*\\{",
          "beginCaptures": {
            "1": { "name": "keyword.operator.type.glyph" },
            "2": { "name": "entity.name.type.glyph" }
          },
          "end": "\\}",
          "patterns": [
            { "include": "#field-definition" },
            { "include": "#comments" }
          ]
        },
        {
          "name": "meta.type.glyph",
          "begin": "^\\s*(type)\\s+([A-Z][a-zA-Z0-9_]*)\\s*\\{",
          "beginCaptures": {
            "1": { "name": "keyword.other.type.glyph" },
            "2": { "name": "entity.name.type.glyph" }
          },
          "end": "\\}",
          "patterns": [
            { "include": "#field-definition" },
            { "include": "#comments" }
          ]
        }
      ]
    },
    "field-definition": {
      "patterns": [
        {
          "match": "\\b([a-z][a-zA-Z0-9_]*)\\s*:\\s*([a-zA-Z][a-zA-Z0-9_]*)(!)?",
          "captures": {
            "1": { "name": "variable.other.property.glyph" },
            "2": { "name": "entity.name.type.glyph" },
            "3": { "name": "keyword.operator.required.glyph" }
          }
        }
      ]
    },
    "route-definition": {
      "patterns": [
        {
          "name": "meta.route.glyph",
          "begin": "^\\s*(@)\\s+(route)\\s+(/[a-zA-Z0-9_/:-]*)",
          "beginCaptures": {
            "1": { "name": "keyword.operator.route.glyph" },
            "2": { "name": "keyword.control.route.glyph" },
            "3": { "name": "string.unquoted.path.glyph" }
          },
          "end": "^(?=\\s*[@:!*~&]|^\\s*type\\b)",
          "patterns": [
            { "include": "#http-method" },
            { "include": "#middleware" },
            { "include": "#statements" },
            { "include": "#comments" }
          ]
        },
        {
          "name": "meta.route.shorthand.glyph",
          "begin": "^\\s*(@)\\s+(GET|POST|PUT|DELETE|PATCH)\\s+(/[a-zA-Z0-9_/:-]*)",
          "beginCaptures": {
            "1": { "name": "keyword.operator.route.glyph" },
            "2": { "name": "constant.language.http-method.glyph" },
            "3": { "name": "string.unquoted.path.glyph" }
          },
          "end": "^(?=\\s*[@:!*~&]|^\\s*type\\b)",
          "patterns": [
            { "include": "#middleware" },
            { "include": "#statements" },
            { "include": "#comments" },
            { "include": "#strings" },
            { "include": "#keywords" },
            { "include": "#numbers" },
            { "include": "#operators" },
            { "include": "#types" }
          ]
        },
        {
          "name": "meta.websocket.glyph",
          "begin": "^\\s*(@)\\s+(ws)\\s+(/[a-zA-Z0-9_/:-]*)\\s*\\{",
          "beginCaptures": {
            "1": { "name": "keyword.operator.route.glyph" },
            "2": { "name": "keyword.control.websocket.glyph" },
            "3": { "name": "string.unquoted.path.glyph" }
          },
          "end": "\\}",
          "patterns": [
            { "include": "#websocket-events" },
            { "include": "#statements" },
            { "include": "#comments" },
            { "include": "#strings" },
            { "include": "#keywords" },
            { "include": "#numbers" },
            { "include": "#operators" },
            { "include": "#types" }
          ]
        }
      ]
    },
    "websocket-events": {
      "patterns": [
        {
          "name": "meta.websocket-event.glyph",
          "begin": "\\b(on)\\s+(connect|message|disconnect)\\s*\\{",
          "beginCaptures": {
            "1": { "name": "keyword.control.on.glyph" },
            "2": { "name": "entity.name.function.event.glyph" }
          },
          "end": "\\}",
          "patterns": [
            { "include": "#statements" },
            { "include": "#comments" },
            { "include": "#strings" },
            { "include": "#keywords" },
            { "include": "#numbers" },
            { "include": "#operators" },
            { "include": "#types" }
          ]
        }
      ]
    },
    "cli-command-definition": {
      "patterns": [
        {
          "name": "meta.cli-command.glyph",
          "begin": "^\\s*(!)\\s+([a-z][a-zA-Z0-9_]*)\\s*",
          "beginCaptures": {
            "1": { "name": "keyword.operator.cli.glyph" },
            "2": { "name": "entity.name.function.cli.glyph" }
          },
          "end": "(?<=\\})",
          "patterns": [
            { "include": "#cli-parameters" },
            { "include": "#comments" },
            { "include": "#strings" },
            {
              "begin": "\\{",
              "end": "\\}",
              "patterns": [
                { "include": "#statements" },
                { "include": "#comments" },
                { "include": "#strings" },
                { "include": "#keywords" },
                { "include": "#numbers" },
                { "include": "#operators" },
                { "include": "#types" }
              ]
            }
          ]
        }
      ]
    },
    "cli-parameters": {
      "patterns": [
        {
          "match": "\\b([a-z][a-zA-Z0-9_]*)\\s*:\\s*([a-zA-Z][a-zA-Z0-9_]*)(!)?",
          "captures": {
            "1": { "name": "variable.parameter.glyph" },
            "2": { "name": "entity.name.type.glyph" },
            "3": { "name": "keyword.operator.required.glyph" }
          }
        }
      ]
    },
    "cron-task-definition": {
      "patterns": [
        {
          "name": "meta.cron-task.glyph",
          "begin": "^\\s*(\\*)\\s+(\"[^\"]+\")\\s+([a-z][a-zA-Z0-9_]*)\\s*\\{",
          "beginCaptures": {
            "1": { "name": "keyword.operator.cron.glyph" },
            "2": { "name": "string.quoted.double.cron-expression.glyph" },
            "3": { "name": "entity.name.function.cron.glyph" }
          },
          "end": "\\}",
          "patterns": [
            { "include": "#statements" },
            { "include": "#comments" },
            { "include": "#strings" },
            { "include": "#keywords" },
            { "include": "#numbers" },
            { "include": "#operators" },
            { "include": "#types" }
          ]
        }
      ]
    },
    "event-handler-definition": {
      "patterns": [
        {
          "name": "meta.event-handler.glyph",
          "begin": "^\\s*(~)\\s+(\"[^\"]+\")\\s*\\{",
          "beginCaptures": {
            "1": { "name": "keyword.operator.event.glyph" },
            "2": { "name": "string.quoted.double.event-name.glyph" }
          },
          "end": "\\}",
          "patterns": [
            { "include": "#statements" },
            { "include": "#comments" },
            { "include": "#strings" },
            { "include": "#keywords" },
            { "include": "#numbers" },
            { "include": "#operators" },
            { "include": "#types" }
          ]
        }
      ]
    },
    "queue-worker-definition": {
      "patterns": [
        {
          "name": "meta.queue-worker.glyph",
          "begin": "^\\s*(&)\\s+(\"[^\"]+\")\\s*\\{",
          "beginCaptures": {
            "1": { "name": "keyword.operator.queue.glyph" },
            "2": { "name": "string.quoted.double.queue-name.glyph" }
          },
          "end": "\\}",
          "patterns": [
            { "include": "#statements" },
            { "include": "#comments" },
            { "include": "#strings" },
            { "include": "#keywords" },
            { "include": "#numbers" },
            { "include": "#operators" },
            { "include": "#types" }
          ]
        }
      ]
    },
    "http-method": {
      "patterns": [
        {
          "match": "\\[(GET|POST|PUT|DELETE|PATCH)\\]",
          "captures": {
            "1": { "name": "constant.language.http-method.glyph" }
          }
        }
      ]
    },
    "middleware": {
      "patterns": [
        {
          "match": "\\+\\s*(auth|ratelimit|validate)\\s*\\(",
          "captures": {
            "1": { "name": "entity.name.function.middleware.glyph" }
          }
        }
      ]
    },
    "statements": {
      "patterns": [
        {
          "match": "^\\s*(\\$)\\s+([a-zA-Z][a-zA-Z0-9_]*)\\s*=",
          "captures": {
            "1": { "name": "keyword.operator.assignment.glyph" },
            "2": { "name": "variable.other.glyph" }
          }
        },
        {
          "match": "\\b(let)\\s+([a-zA-Z][a-zA-Z0-9_]*)\\s*=",
          "captures": {
            "1": { "name": "keyword.other.let.glyph" },
            "2": { "name": "variable.other.glyph" }
          }
        },
        {
          "match": "^\\s*(>)\\s+",
          "captures": {
            "1": { "name": "keyword.operator.return.glyph" }
          }
        },
        {
          "match": "\\b(return)\\s+",
          "captures": {
            "1": { "name": "keyword.control.return.glyph" }
          }
        },
        {
          "match": "^\\s*(%)\\s+([a-zA-Z][a-zA-Z0-9_]*)\\s*:\\s*([a-zA-Z][a-zA-Z0-9_]*)",
          "captures": {
            "1": { "name": "keyword.operator.injection.glyph" },
            "2": { "name": "variable.other.injection.glyph" },
            "3": { "name": "entity.name.type.glyph" }
          }
        },
        {
          "match": "^\\s*(\\?)\\s+",
          "captures": {
            "1": { "name": "keyword.operator.validation.glyph" }
          }
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.glyph",
          "match": "\\b(if|else|while|for|in|switch|case|default)\\b"
        },
        {
          "name": "constant.language.glyph",
          "match": "\\b(true|false|null)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "support.type.builtin.glyph",
          "match": "\\b(int|str|string|bool|float)\\b"
        },
        {
          "name": "entity.name.type.glyph",
          "match": "\\b[A-Z][a-zA-Z0-9_]*\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.glyph",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.glyph",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.glyph",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.glyph",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.glyph",
          "match": "\\b[0-9]+\\.[0-9]+\\b"
        },
        {
          "name": "constant.numeric.integer.glyph",
          "match": "\\b[0-9]+\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.glyph",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.logical.glyph",
          "match": "(&&|\\|\\|)"
        },
        {
          "name": "keyword.operator.arithmetic.glyph",
          "match": "(\\+|-|\\*|/)"
        },
        {
          "name": "keyword.operator.arrow.glyph",
          "match": "->"
        }
      ]
    }
  }
}
